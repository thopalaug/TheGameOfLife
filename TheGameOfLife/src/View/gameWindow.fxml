<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:controller="Controller.Controller" xmlns:fx="http://javafx.com/fxml">

    <center>
        <Canvas fx:id="canvas" onMouseClicked="#canvasMouseEvent" onMouseDragged="#canvasMouseEvent" height="600.0" width="600.0" />
    </center>

    <bottom>
        <GridPane>
            <Button fx:id="start" GridPane.columnIndex="1" GridPane.rowIndex="0" mnemonicParsing="false" prefWidth="100" onAction="#startButton" text="Start"/>
            <Button fx:id="reset" GridPane.columnIndex="2" GridPane.rowIndex="0" mnemonicParsing="false" prefWidth="100" onAction="#resetButton" text="Reset"/>
            <Button fx:id="slowSpeed" GridPane.columnIndex="3" GridPane.rowIndex="0" mnemonicParsing="false" prefWidth="100" onAction="#slowSpeed" text="slow"/>
            <Button fx:id="normalSpeed" GridPane.columnIndex="4" GridPane.rowIndex="0" mnemonicParsing="false" prefWidth="100" onAction="#normalSpeed" text="normal"/>
            <Button fx:id="fastSpeed" GridPane.columnIndex="5" GridPane.rowIndex="0" mnemonicParsing="false" prefWidth="100" onAction="#fastSpeed" text="fast"/>
        </GridPane>
    </bottom>

</BorderPane>